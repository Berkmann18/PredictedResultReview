{
  "name": "predictedresultreview",
  "version": "0.0.0-development",
  "description": "Review current and old data while having an eye on the forecasts on the old data",
  "main": "index.js",
  "bin": {
    "prr": "./index.js"
  },
  "scripts": {
    "test": "jest",
    "fmt": "eslint -c ./config/.eslintrc.js *.js src/*.js --fix",
    "doc:lint": "documentation lint src/**",
    "doc:md": "documentation build src/** -f md -o DOCUMENTATION.md",
    "doc": "npm run doc:lint && npm run doc:md",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG.md -s -r 0",
    "version": "npm run changelog && git add CHANGELOG.md",
    "commit": "git-cz",
    "lint:md": "remark . .github -i ./config/.remarkignore",
    "lint": "npm run fmt && npm run lint:md",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Berkmann18/PredictedResultReview.git"
  },
  "bugs": {
    "url": "https://github.com/Berkmann18/PredictedResultReview/issues"
  },
  "homepage": "https://github.com/Berkmann18/PredictedResultReview#readme",
  "keywords": [
    "review",
    "data",
    "forecasting",
    "table",
    "result"
  ],
  "author": "Berkmann18",
  "license": "MIT",
  "dependencies": {
    "colors": "^1.3.2",
    "commander": "^2.19.0",
    "nclr": "^1.2.1"
  },
  "devDependencies": {
    "cz-adapter-eslint": "^0.1.2",
    "documentation": "^8.1.2",
    "eslint": "^5.9.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.5",
    "remark-cli": "^6.0.1",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "semantic-release": "^15.12.0",
    "travis-deploy-once": "^5.0.9"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js",
      "test/*.js",
      "!**/node_modules/**",
      "!**/_*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 50,
        "statements": 50
      }
    },
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-adapter-eslint"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint -c ./config/.eslintrc.js --fix",
      "git add",
      "jest --bail --findRelatedTests"
    ],
    "*.md": [
      "remark",
      "git add"
    ]
  }
}
